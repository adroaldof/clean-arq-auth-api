{
  "name": "clean-arq-auth-api",
  "packageManager": "yarn@3.5.1",
  "description": "Clean Architecture API with JWT Authentication project",
  "version": "1.0.0",
  "author": "Adroaldo de Andrade <adroaldof@gmail.com>",
  "license": "ISC",
  "main": "src/main-rest-api.ts",
  "scripts": {
    "build": "tsc",
    "start": "ts-node-dev --respawn -r tsconfig-paths/register ./src/main-rest-api.ts",
    "dev": "docker compose up",
    "dtw": "docker compose -f docker-compose.test.yaml run api yarn jest --testMatch '/**/*.test.e2e.ts' --watchAll --detectOpenHandles",
    "dtc": "docker compose -f docker-compose.test.yaml run api yarn jest --testMatch '**/?(*.)+(test|test.e2e).ts' --coverage --detectOpenHandles --forceExit",
    "dsa": "docker container stop $(docker container list -q) || true && docker rm $(docker container list -aq) || true",
    "test": "jest",
    "test-integration": "jest --testMatch '/**/*.test.e2e.ts' --detectOpenHandles --forceExit",
    "test-coverage": "jest --testMatch '**/?(*.)+(test|test.e2e).ts' --coverage --detectOpenHandles --forceExit",
    "test-watch": "jest --watchAll",
    "coverage": "jest --coverage",
    "coverage-watch": "jest --coverage --watchAll",
    "make-migration": "knex migrate:make --knexfile ./src/infra/database/knexfile.ts",
    "run-migrations": "knex migrate:latest --knexfile ./src/infra/database/knexfile.ts",
    "rollback-migrations": "knex migrate:rollback --knexfile ./src/infra/database/knexfile.ts",
    "make-seed": "knex seed:make --knexfile ./src/infra/database/knexfile.ts",
    "run-seed": "knex seed:run --knexfile ./src/infra/database/knexfile.ts",
    "lint": "eslint --ext .ts src/ --fix"
  },
  "dependencies": {
    "cors": "2.8.5",
    "dotenv": "^16.0.3",
    "express": "4.18.2",
    "http-status-codes": "2.2.0",
    "jsonwebtoken": "9.0.0",
    "knex": "2.4.2",
    "pg": "8.9.0",
    "snake-camel": "1.0.8",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@faker-js/faker": "7.6.0",
    "@types/cors": "2.8.13",
    "@types/express": "4.17.17",
    "@types/jest": "29.4.0",
    "@types/jsonwebtoken": "9.0.2",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.49.0",
    "@typescript-eslint/parser": "5.49.0",
    "eslint": "8.33.0",
    "jest": "29.4.1",
    "supertest": "6.3.3",
    "ts-jest": "29.0.5",
    "ts-node": "10.9.1",
    "ts-node-dev": "2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "4.9.4"
  }
}
