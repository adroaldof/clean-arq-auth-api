{
  "compilerOptions": {
    "incremental": true,
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "paths": {
      "@/ports/*": ["./src/application/ports/*"],
      "@/use-cases/*": ["./src/application/use-cases/*"],
      "@/entities/*": ["./src/domain/entities/*"],
      "@/controllers/*": ["./src/infra/controllers/*"],
      "@/database/*": ["./src/infra/database/*"],
      "@/http/*": ["./src/infra/http/*"],
      "@/repositories/*": ["./src/infra/repositories/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "types"],
  "exclude": ["node_modules"]
}
