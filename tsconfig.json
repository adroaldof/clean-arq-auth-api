{
  "compilerOptions": {
    "incremental": true,
    "target": "ESNext",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/ports/*": ["./src/application/ports/*"],
      "@/use-cases/*": ["./src/application/use-cases/*"],
      "@/entities/*": ["./src/domain/entities/*"],
      "@/controller/*": ["./src/infra/controller/*"],
      "@/http/*": ["./src/infra/http/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "types"]
}
